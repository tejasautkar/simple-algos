{
    "compilerOptions": {
      "incremental": true,
      "module": "commonjs",
      "target": "es5",
      "declaration": true,
      "outDir": "dist",
      "esModuleInterop": true,        /* Enables intero between CommonJS and ES */
      "skipLibCheck": true,           /* Skip type checking of declaration files. */
      "forceConsistentCasingInFileNames": true /* Disallow inconsistently */
    },
    "include": [
      "src"
    ]
  }